<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.easy.sumit.lifeline.fragments.PersonSearchFragment"
    android:id="@+id/personSearchFragment"
    android:background="#ffffff">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:text="Select blood group and location "
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/buttonColor"
        android:textSize="30dp" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerBloodGroup"
        android:textAlignment="center"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stateSelector"
        android:layout_below="@+id/spinnerBloodGroup"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/districtSelector"
        android:layout_below="@+id/stateSelector"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sub_districtSelector"
        android:layout_below="@+id/districtSelector"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sub_districtSelector"
        android:background="@color/buttonBackgroundColor"
        android:nestedScrollingEnabled="false"
        android:text="Search"
        android:textColor="@color/buttonColor" />

</RelativeLayout>
