<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:orientation="vertical">


    <Button
        android:id="@+id/changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:background="@color/buttonBackgroundColor"
        android:text="Change account password"
        android:textColor="@color/buttonColor" />

    <Button
        android:id="@+id/changeLastDonated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/buttonBackgroundColor"
        android:text="Change last donated date"
        android:textColor="@color/buttonColor" />

    <Button
        android:id="@+id/changeLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/buttonBackgroundColor"
        android:text="Change your location"
        android:textColor="@color/buttonColor" />

    <Button
        android:id="@+id/changeContactNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/buttonBackgroundColor"
        android:text="Change your contact no"
        android:textColor="@color/buttonColor" />

</LinearLayout>

