<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.easy.sumit.lifeline.Fragments.ProfileFragment"
    android:id="@+id/profile_fragment_relative_layout">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/personNameView"
        android:layout_gravity="center_horizontal|top"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_marginTop="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Blood Group"
        android:id="@+id/personBloodGroupView"
        android:textSize="60dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/personContactView"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address"
        android:id="@+id/personAddressView"
        android:textSize="20dp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/personEmailView"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="eMail"
        android:id="@+id/personEmailView"
        android:textAlignment="center"
        android:layout_below="@+id/personNameView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contact No"
        android:id="@+id/personContactView"
        android:textAlignment="center"
        android:layout_below="@+id/personAddressView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:textSize="20dp" />

</RelativeLayout>
